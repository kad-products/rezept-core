{
	"$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 130
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all",
			"arrowParentheses": "asNeeded"
		}
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab"
		}
	},
	"files": {
		"includes": [
			"**",
			"!coverage",
			"!worker-configuration.d.ts",
			"!**/.terraform",
			"!**/node_modules",
			"!**/dist",
			"!**/.wrangler"
		]
	},
	"overrides": [
		{
			"includes": ["**/__tests__/**"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		}
	]
}
